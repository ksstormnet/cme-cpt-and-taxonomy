{
  "name": "cme-personas",
  "version": "1.0.0",
  "description": "A WordPress plugin that adds the Customer Persona custom post type and media library tagging functionality.",
  "scripts": {
    "prepare": "husky",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:css": "stylelint '**/*.css'",
    "lint:php": "phpcs",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:php",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.php": [
      "phpcs"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ksstormnet/cme-personas.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/ksstormnet/cme-personas/issues"
  },
  "homepage": "https://github.com/ksstormnet/cme-personas#readme",
  "devDependencies": {
    "@wordpress/eslint-plugin": "^22.5.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0"
  }
}
